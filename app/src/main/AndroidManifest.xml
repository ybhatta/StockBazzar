<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roshankc.stockbazzar">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search" android:launchMode="singleInstance"></activity>
        <activity android:name=".CreateAccountActivity" android:noHistory="true" />
        <activity android:name=".LoggedInPage" />
        <activity android:name=".NotesActivity" android:noHistory="true"/>
        <activity android:name=".PortfolioActivity" android:noHistory="true"/>
        <activity android:name=".ProfileActivity" android:noHistory="true"/>
        <activity android:name=".BuyTransactionActivity" android:noHistory="true"/>
        <activity android:name=".SellTransactionActivity" android:noHistory="true"/>
        <activity android:name=".WatchListActivity" android:noHistory="true"/>
        <activity android:name=".MainActivity" android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>